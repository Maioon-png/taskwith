.wrapper
  = render "top/side_bar"
  .main__record
    .main__record__contents
      .record__text
        作業累計時間
      .record_time
        - if @time_min
          - if @time_min > 0
            .time_box
              = "#{@time_min}分"
          - else
            .time_box_less
              まだ０分未満です。
          
        - else
          .time_box_no-time
            まだ記録はありません。
          %br
          = link_to "Room", rooms_path
          へ行ってみましょう。
      .record_img
        .record_img_1
          = image_tag 'taskwith7.png', width: "100"
        .record_img_2
          = image_tag 'taskwith8.png', width: "100"
    .background_img
  